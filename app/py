# app.py
import streamlit as st
import numpy as np
import joblib

# Load model
model = joblib.load("model/seo_model.pkl")

st.set_page_config(page_title="SEO Score Predictor", layout="centered")
st.title("🔍 SEO Score Predictor")
st.markdown("Enter your on-page SEO features to predict your SEO score.")

# Input fields
word_count = st.number_input("📄 Word Count", min_value=100, max_value=3000, value=1000, step=50)
keyword_density = st.slider("🔑 Keyword Density (%)", min_value=0.1, max_value=5.0, value=1.5, step=0.1)
meta_title_length = st.slider("📝 Meta Title Length", min_value=10, max_value=70, value=55)
meta_desc_length = st.slider("📃 Meta Description Length", min_value=50, max_value=200, value=150)
alt_tag_percent = st.slider("🖼️ Image Alt Tag Usage (%)", min_value=0, max_value=100, value=80)

if st.button("🎯 Predict SEO Score"):
    input_data = np.array([[word_count, keyword_density, meta_title_length, meta_desc_length, alt_tag_percent]])
    predicted_score = model.predict(input_data)[0]
    st.success(f"✅ Predicted SEO Score: **{predicted_score:.2f}** / 100")
